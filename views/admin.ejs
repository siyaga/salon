<%- include('partials/footer') %>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    
    const templates = {
      PANGGIL: <%- JSON.stringify(templates.PANGGIL || '') %>,
      REMINDER: <%- JSON.stringify(templates.REMINDER || '') %>
    };
    const csrfToken = '<%= csrfToken %>';

    // --- Handler Tombol PANGGILAN ---
    const btnPanggil = document.getElementById('btn_panggil_wa');
    if (btnPanggil) {
      btnPanggil.addEventListener('click', function() {
        const nama = this.getAttribute('data-nama');
        const nomor = this.getAttribute('data-nomor');
        const antrian = this.getAttribute('data-antrian');
        const jam = this.getAttribute('data-jam');
        const tglLahir = this.getAttribute('data-tgl-lahir');
        const alamat = this.getAttribute('data-alamat');
        const note = this.getAttribute('data-note');
        let template = templates.PANGGIL;
        template = template.replace(/\[nama\]/g, nama);
        template = template.replace(/\[no_antrian\]/g, antrian);
        template = template.replace(/\[jam_datang\]/g, jam);
        template = template.replace(/\[tgl_lahir\]/g, tglLahir);
        template = template.replace(/\[alamat\]/g, alamat);
        template = template.replace(/\[note\]/g, note);
        const link = `https://wa.me/${nomor}?text=${encodeURIComponent(template)}`;
        window.open(link, '_blank');
      });
    }

    // --- Handler Tombol REMINDER ---
    const btnReminder = document.getElementById('btn_reminder_wa');
    if (btnReminder) {
      btnReminder.addEventListener('click', function() {
        const nama = this.getAttribute('data-nama');
        const nomor = this.getAttribute('data-nomor');
        const antrian = this.getAttribute('data-antrian');
        const jam = this.getAttribute('data-jam');
        const tglLahir = this.getAttribute('data-tgl-lahir');
        const alamat = this.getAttribute('data-alamat');
        const note = this.getAttribute('data-note');
        let template = templates.REMINDER; 
        template = template.replace(/\[nama\]/g, nama);
        template = template.replace(/\[no_antrian\]/g, antrian);
        template = template.replace(/\[jam_datang\]/g, jam);
        template = template.replace(/\[tgl_lahir\]/g, tglLahir);
        template = template.replace(/\[alamat\]/g, alamat);
        template = template.replace(/\[note\]/g, note);
        const link = `https://wa.me/${nomor}?text=${encodeURIComponent(template)}`;
        window.open(link, '_blank');
      });
    }

    // --- Handler MODAL EDIT PAKET ---
    const editModal = document.getElementById('editPackageModal');
    if (editModal) {
      editModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;
        const nama = button.getAttribute('data-bs-nama');
        const durasi = button.getAttribute('data-bs-durasi');
        const deskripsi = button.getAttribute('data-bs-deskripsi');
        const kategori = button.getAttribute('data-bs-kategori');
        
        editModal.querySelector('#edit_nama_paket').value = nama;
        editModal.querySelector('#edit_durasi').value = durasi;
        editModal.querySelector('#edit_deskripsi').value = deskripsi;
        editModal.querySelector('#edit_old_name').value = nama; 
        editModal.querySelector('#edit_kategori').value = kategori;
      });
    }
    
    // --- (BARU) Handler untuk MODAL DETAIL PELANGGAN ---
    const detailModal = document.getElementById('detailModal');
    if (detailModal) {
      detailModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;
        
        // Ambil semua data dari tombol
        const nama = button.getAttribute('data-bs-nama');
        const wa = button.getAttribute('data-bs-wa');
        const tglLahir = button.getAttribute('data-bs-tgl-lahir');
        const jamDatang = button.getAttribute('data-bs-jam-datang');
        const alamat = button.getAttribute('data-bs-alamat');
        const paket = button.getAttribute('data-bs-paket');
        const note = button.getAttribute('data-bs-note');
        
        // Masukkan ke modal
        detailModal.querySelector('#detail-nama').textContent = nama;
        detailModal.querySelector('#detail-jam-datang').textContent = jamDatang;
        detailModal.querySelector('#detail-wa').textContent = wa;
        detailModal.querySelector('#detail-alamat').textContent = alamat;
        detailModal.querySelector('#detail-tgl-lahir').textContent = tglLahir;
        detailModal.querySelector('#detail-paket').textContent = paket;
        detailModal.querySelector('#detail-note').textContent = note || '-';
      });
    }

    // --- Handler Flash Message Toast ---
    <% if (typeof flash !== 'undefined' && flash && flash.message) { %>
      const toastEl = document.getElementById('successToast');
      const toastBody = document.getElementById('toastMessage');
      toastBody.textContent = '<%= flash.message %>';
      const successToast = new bootstrap.Toast(toastEl, { delay: 3000 });
      successToast.show();
    <% } %>

  });
</script>