<%- include('partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4 pb-3 border-bottom">
 <div class="d-flex align-items-center">
  <img src="/img/logo.png" alt="<%= appName %> Logo" style="height: 40px; margin-right: 15px;">
  <h2 class="mb-0 fw-bold">
    <%= appName %> - Dashboard: <%= currentBranch %>
  </h2>
</div>
  <div>
    <button type.="button" class="btn btn-outline-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#settingsModal" style="border-radius: 0.5rem;">
      <i class="bi bi-gear-fill me-2"></i>Pengaturan
    </button>
    <a href="/admin" class="btn btn-outline-primary btn-sm ms-2" style="border-radius: 0.5rem;">
      <i class="bi bi-arrow-clockwise me-2"></i>Refresh
    </a>
    <a href="/logout" class="btn btn-outline-danger btn-sm ms-2" style="border-radius: 0.5rem;">
      <i class="bi bi-box-arrow-right me-2"></i>Logout
    </a>
  </div>
</div>

<%
  // Kalkulasi data untuk stat card
  // INI BLOK YANG HILANG DI FILE ANDA
  const totalAntrian = queue.length;
  const totalMenunggu = queue.filter(q => q.status === 'Menunggu').length;
  const noDilayani = current ? current.no_antrian : '0';
%>
<div class="row g-4 mb-4">
  <div class="col-md-4">
    <div class="card stat-card shadow-sm border-0 border-start-primary">
      <div class="card-body">
        <div class="row align-items-center">
          <div class="col">
            <div class="stat-card-title text-primary">Total Antrian Hari Ini</div>
            <div class="stat-card-value"><%= totalAntrian %></div>
          </div>
          <div class="col-auto">
            <i class="bi bi-people-fill fs-2 text-primary opacity-50"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card stat-card shadow-sm border-0 border-start-success">
      <div class="card-body">
        <div class="row align-items-center">
          <div class="col">
            <div class="stat-card-title text-success">Sedang Dilayani</div>
            <div class="stat-card-value"><%= noDilayani %></div>
          </div>
          <div class="col-auto">
            <i class="bi bi-person-check-fill fs-2 text-success opacity-50"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card stat-card shadow-sm border-0 border-start-warning">
      <div class="card-body">
        <div class="row align-items-center">
          <div class="col">
            <div class="stat-card-title text-warning">Menunggu</div>
            <div class="stat-card-value"><%= totalMenunggu %></div>
          </div>
          <div class="col-auto">
            <i class="bi bi-hourglass-split fs-2 text-warning opacity-50"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="row g-4"> 
  <div class="col-lg-5">
    
    <div class="card shadow border-primary mb-4"> 
      <div class="card-header bg-primary text-white border-0 rounded-top-4 py-3">
        <h5 class="mb-0 fw-bold">
          <i class="bi bi-megaphone-fill me-2"></i>Panggilan Berikutnya
        </h5>
      </div>
      <div class="card-body p-4">
        <% if (next) { %>
          <div class="text-center">
            <h1 class="display-3 fw-bold"><%= next.no_antrian %></h1>
            <p class="lead fs-4 mb-3"><%= next.nama %></p>
            <span class="badge bg-secondary-subtle text-secondary-emphasis mb-3 fs-6">
              <i class="bi bi-clock-fill me-1"></i> Reservasi jam: <%= next.jam_datang %>
            </span>
          </div>
          <button type="button" id="btn_panggil_wa" 
                  class="btn btn-primary w-100 mb-2"
                  data-nama="<%= next.nama %>"
                  data-nomor="<%= next.no_wa %>"
                  data-antrian="<%= next.no_antrian %>"
                  data-jam="<%= next.jam_datang %>"
                  data-tgl-lahir="<%= next.tgl_lahir %>"
                  data-alamat="<%= next.alamat %>"
                  data-note="<%= next.note %>">
            <i class="bi bi-whatsapp me-2"></i>Panggil via WA
          </button>
          <form action="/next" method="POST" class="d-grid">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <input type="hidden" name="cabang" value="<%= currentBranch %>">
            <input type="hidden" name="current_antrian" value="<%= current ? current.no_antrian : '' %>">
            <input type="hidden" name="next_antrian" value="<%= next.no_antrian %>">
            <button type="submit" class="btn btn-success w-100">
              <i class="bi bi-check-circle-fill me-2"></i>Tandai "Melayani" (Update Sistem)
            </button>
          </form>
        <% } else { %>
          <p class="text-muted text-center p-4 mb-0">(Antrian habis)</p>
        <% } %>
      </div>
    </div>

    <% if (reminder) { %>
      <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-warning-subtle border-0 rounded-top-4 py-3">
           <h5 class="mb-0 fw-bold text-warning-emphasis">
            <i class="bi bi-bell-fill me-2"></i>Reminder Antrian
           </h5>
        </div>
        <div class="card-body p-4">
          <div class="text-center">
            <h1 class="display-4 fw-bold text-warning"><%= reminder.no_antrian %></h1>
            <p class="lead fs-4 mb-3"><%= reminder.nama %></p>
            <span class="badge bg-secondary-subtle text-secondary-emphasis mb-3 fs-6">
              <i class="bi bi-clock-fill me-1"></i> Reservasi jam: <%= reminder.jam_datang %>
            </span>
          </div>
          <button type="button" id="btn_reminder_wa" 
                  class="btn btn-warning w-100 text-dark"
                  data-nama="<%= reminder.nama %>"
                  data-nomor="<%= reminder.no_wa %>"
                  data-antrian="<%= reminder.no_antrian %>"
                  data-jam="<%= reminder.jam_datang %>"
                  data-tgl-lahir="<%= reminder.tgl_lahir %>"
                  data-alamat="<%= reminder.alamat %>"
                  data-note="<%= reminder.note %>">
            <i class="bi bi-send-fill me-2"></i>Kirim Reminder WA
          </button>
        </div>
      </div>
    <% } %>
  </div>

  <div class="col-lg-7">
    <div class="card shadow-sm border-0 h-100"> 
      <div class="card-header bg-white border-0 rounded-top-4 py-3">
        <h5 class="mb-0 fw-bold">
          <i class="bi bi-list-ol me-2"></i>Daftar Antrian Hari Ini
        </h5>
      </div>
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover mb-0 align-middle">
            <thead class="table-light">
              <tr>
                <th classs="text-center" style="width: 10%; padding-left: 1.5rem;">No.</th>
                <th style="width: 15%;">Jam</th>
                <th style="width: 30%;">Nama</th>
                <th style="width: 25%;">Paket</th>
                <th style="width: 10%;">Status</th>
                <th style="width: 10%;">Aksi</th>
              </tr>
            </thead>
            <tbody>
              <% if (queue.length > 0) { %>
                <% queue.sort((a, b) => a.no_antrian - b.no_antrian).forEach(q => { %>
                  <tr class="
                    <% if(q.status === 'Melayani') { %> table-info <% } %>
                    <% if(q.status === 'Selesai') { %> text-muted opacity-75 <% } %>
                  ">
                    <td class="fw-bold fs-5 text-center" style="padding-left: 1.5rem;"><%= q.no_antrian %></td>
                    <td class="fw-bold"><%= q.jam_datang %></td>
                    <td class="fw-500"><%= q.nama %></td>
                    <td class="small text-muted"><%= q.paket %></td>
                    <td>
                      <span class="badge 
                        <% if(q.status === 'Melayani') { %> bg-primary-subtle text-primary-emphasis border border-primary-subtle <% } %>
                        <% if(q.status === 'Menunggu') { %> bg-warning-subtle text-warning-emphasis border border-warning-subtle <% } %>
                        <% if(q.status === 'Selesai') { %> bg-secondary-subtle text-secondary-emphasis border border-secondary-subtle <% } %>
                      ">
                        <%= q.status %>
                      </span>
                    </td>
                    <td>
                      <button type="button" class="btn btn-outline-secondary btn-sm p-1"
                              data-bs-toggle="modal" 
                              data-bs-target="#detailModal"
                              data-bs-nama="<%= q.nama %>"
                              data-bs-wa="<%= q.no_wa %>"
                              data-bs-tgl-lahir="<%= q.tgl_lahir %>"
                              data-bs-jam-datang="<%= q.jam_datang %>"
                              data-bs-alamat="<%= q.alamat %>"
                              data-bs-paket="<%= q.paket %>"
                              data-bs-note="<%= q.note %>">
                        <i class="bi bi-eye-fill"></i>
                      </button>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="6" class="text-center p-5">
                    <i class="bi bi-moon-stars fs-3 text-muted"></i>
                    <p class="text-muted mb-0 mt-2">Belum ada antrian untuk hari ini.</p>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="modal fade" id="settingsModal" tabindex="-1" aria-labelledby="settingsModalLabel" aria-hidden="true">
