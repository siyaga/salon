            <button class="nav-link" id="wording-tab" data-bs-toggle="tab" data-bs-target="#wording-tab-pane" type="button" role="tab">Kelola Teks WA</button>
          </li>
        </ul>

        <div class="tab-content" id="settingsTabContent">
          
          <div class="tab-pane fade show active" id="paket-tab-pane" role="tabpanel">
            <h6>Paket Saat Ini</h6>
            <div class="table-responsive mb-3">
              <table class="table table-sm table-striped">
                <thead>
                  <tr>
                    <th>Nama Paket</th>
                    <th>Durasi</th>
                    <th>Deskripsi</th>
                    <th>Kategori</th>
                    <th style="width: 15%;">Aksi</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (packages && packages.length > 0) { %>
                    <% packages.forEach(paket => { %>
                      <tr>
                        <td class="fw-bold"><%= paket.nama %></td>
                        <td><%= paket.durasi %></td>
                        <td class="small"><%= paket.deskripsi %></td>
                        <td><span class="badge bg-secondary"><%= paket.kategori %></span></td>
                        <td>
                          <button type="button" class="btn btn-outline-primary btn-sm p-1" 
                                  data-bs-toggle="modal" data-bs-target="#editPackageModal"
                                  data-bs-nama="<%= paket.nama %>"
                                  data-bs-durasi="<%= paket.durasi %>"
                                  data-bs-deskripsi="<%= paket.deskripsi %>"
                                  data-bs-kategori="<%= paket.kategori %>">
                            <i class="bi bi-pencil-fill"></i>
                          </button>
                          <form action="/admin/paket/hapus" method="POST" class="d-inline" onsubmit="return confirm('Yakin ingin menghapus paket: <%= paket.nama %>?');">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <input type="hidden" name="nama_paket" value="<%= paket.nama %>">
                            <button type="submit" class="btn btn-outline-danger btn-sm p-1 ms-1">
                              <i class="bi bi-trash-fill"></i>
                            </button>
                          </form>
                        </td>
                      </tr>
                    <% }) %>
                  <% } else { %>
                    <tr><td colspan="5" class="text-center">Belum ada paket.</td></tr>
                  <% } %>
                </tbody>
              </table>
            </div>
            <hr>
            <h6>Tambah Paket Baru</h6>
            <form action="/admin/paket/tambah" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div class="mb-2">
                <label for="nama_paket" class="form-label">Nama Paket</label>
                <input type="text" name="nama_paket" id="nama_paket" class="form-control" required>
              </div>
              <div class="row">
                <div class="col-md-6 mb-2">
                  <label for="durasi" class="form-label">Durasi (cth: 30 Menit)</label>
                  <input type="text" name="durasi" id="durasi" class="form-control" required>
                </div>
                <div class="col-md-6 mb-2">
                  <label for="kategori_tambah" class="form-label">Kategori</label>
                  <select name="kategori" id="kategori_tambah" class="form-select" required>
                    <option value="" disabled selected>-- Pilih Kategori --</option>
                    <% if(categories && categories.length > 0) { %>
                      <% categories.forEach(cat => { %>
                        <option value="<%= cat %>"><%= cat %></option>
                      <% }) %>
                    <% } %>
                  </select>
                </div>
              </div>
              <div class="mb-2">
                <label for="deskripsi" class="form-label">Deskripsi Singkat</label>
                <textarea name="deskripsi" id="deskripsi" class="form-control" rows="2" required></textarea>
              </div>
              <div class="text-end">
                <button type="submit" class="btn btn-primary">
                  <i class="bi bi-plus-circle-fill me-2"></i>Tambah Paket
                </button>
              </div>
            </form>
          </div>
          
          <div class="tab-pane fade" id="kategori-tab-pane" role="tabpanel">
            <h6>Kategori Saat Ini</h6>
            <ul class="list-group mb-3">
              <% if (categories && categories.length > 0) { %>
                <% categories.forEach(cat => { %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <%= cat %>
                    <form action="/admin/kategori/hapus" method="POST" onsubmit="return confirm('Yakin ingin menghapus kategori ini?');">
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <input type="hidden" name="nama_kategori" value="<%= cat %>">
                      <button type="submit" class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-trash-fill"></i> Hapus
                      </button>
                    </form>
                  </li>
                <% }) %>
              <% } else { %>
                <li class="list-group-item">Belum ada kategori.</li>
              <% } %>
            </ul>
            <hr>
            <h6>Tambah Kategori Baru</h6>
            <form action="/admin/kategori/tambah" method="POST" class="d-flex">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <input type="text" name="nama_kategori" class="form-control me-2" placeholder="Nama kategori baru" required>
              <button type="submit" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill me-2"></i>Tambah
              </button>
            </form>
          </div>

          <div class="tab-pane fade" id="wording-tab-pane" role="tabpanel">
            <p class="small text-muted">
              Gunakan: `[nama]`, `[no_antrian]`, `[jam_datang]`, `[tgl_lahir]`, `[alamat]`, `[note]`
            </p>
            <form action="/admin/wording/update" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div class="mb-3">
                <label for="modal_text_panggil" class="form-label fw-bold">Teks Panggilan</label>
                <textarea id="modal_text_panggil" name="text_panggil" class="form-control" rows="4"><%= templates.PANGGIL || '' %></textarea>
              </div>
              <div class="mb-3">
                <label for="modal_text_reminder" class="form-label fw-bold">Teks Reminder</label>
                <textarea id="modal_text_reminder" name="text_reminder" class="form-control" rows="4"><%= templates.REMINDER || '' %></textarea>
              </div>
              <div class="text-end">
                <button type="submit" class="btn btn-primary">
                  <i class="bi bi-save-fill me-2"></i>Simpan Perubahan Teks
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


